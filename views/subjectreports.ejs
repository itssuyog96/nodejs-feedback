<script>
    $(document).ready(function(){
       $.ajax({
           url: '../../ajax/getSurveyList',
           data: {col_id: 1},
           method: 'POST',
           success: function(data){
               data.forEach(function(d){
                   $('#survey_id').append('<option value="'+d.semtype+'">'+d.survey_id+'</option>')
               });

               getSemList();

           }
       });

        $.ajax({
            url: '../../ajax/getDeptList',
            data: {col_id: 1},
            method: 'POST',
            success: function(data){
                data.forEach(function(d){
                    $('#dept_id').append('<option value="'+d.dept_id+'">'+d.dept_name+'</option>')
                });

            }
        });

        $('#survey_id').on('change', function(){
            getSemList();
        })

    });

    $('.select-survey-div').on('click', '.get-subject-btn', function(e){
        e.preventDefault();

        $.ajax({
            url: '../../ajax/load_sub',
            method: 'POST',
            data: {col_id: 1, dept_id: $('#dept_id').val(), sem: $('#sem').val()},
            success: function(data){
                $('#subject_panel').text('');
                data.data.forEach(function(d){
                    $('#subject_panel').append('' +
                        '<div class="col-md-12 col-sm-12 col-xs-12" style="padding-bottom: 10px;">' +
                            '<a onclick="javascript:getSurvey('+d.sub_id+', '+d.prof_id+')" align="center" id="'+d.sub_id+'" class="btn blue btn-outline" style="width: 100%;">'+d.sub_name.toUpperCase()+'</a>' +
                        '</div>');
                })
            }
        })
    });

    function getSemList(){
        $('#survey_id_span').text($('#survey_id option:selected').text());
        var sem = new Array();

        if($('#survey_id').val() == 'odd'){
            sem = [1, 3, 5, 7];
        }
        else if($('#survey_id').val() == 'even'){
            sem = [2, 4, 6, 8];
        }
        $('#sem').text('');
        for(i in sem){
            $('#sem').append('<option value="'+sem[i]+'">'+sem[i]+'</option>');
        }
    }

    function getSurvey(sub_id, prof_id){
        console.log(sub_id, prof_id);
    }

</script>


